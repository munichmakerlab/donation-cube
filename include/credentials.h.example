#ifndef CREDENTIALS_H
#define CREDENTIALS_H

// Network Configuration
// Set to 0 to disable WiFi and MQTT (standalone mode)
#define ENABLE_WIFI       1                    // 1 = Enable WiFi, 0 = Standalone mode
#define ENABLE_MQTT       ENABLE_WIFI          // MQTT depends on WiFi

// WiFi Configuration (only used when ENABLE_WIFI = 1)
#define WIFI_SSID         "YourWiFiNetwork"    // Replace with your WiFi SSID
#define WIFI_PASSWORD     "YourWiFiPassword"   // Replace with your WiFi password

// MQTT Configuration (only used when ENABLE_MQTT = 1)
#define MQTT_SERVER       "broker.hivemq.com"  // Replace with your MQTT broker
#define MQTT_PORT         1883                 // Replace with your MQTT port
#define MQTT_USER         nullptr              // Replace with MQTT username or keep nullptr
#define MQTT_PASSWORD     nullptr              // Replace with MQTT password or keep nullptr

#endif // CREDENTIALS_H
